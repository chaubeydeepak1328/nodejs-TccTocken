<script>
    let walletAddress = localStorage.getItem("walletAccount") || "";
    if (walletAddress) {
        const walletOpener = document.getElementById("walletAddress");
        const walletOpner1 = document.getElementById("walletAddress1");
        if (walletOpener) {
            walletOpener.innerText = `${walletAddress.slice(0, 5)}...${walletAddress.slice(-4)}`;
            walletOpner1.innerText = `connected ${walletAddress.slice(0, 5)}...${walletAddress.slice(-4)}`;

            window.location.href = "/userDashboard";
        } else {
            console.error('Element with ID "wallet_opener" not found.');
        }
    } else {
        const walletText = document.getElementById("walletText");
        if (walletText) {
            walletText.innerText = "Connect Wallet";
        } else {
            console.error('Element with ID "walletText" not found.');
        }
    }

</script>